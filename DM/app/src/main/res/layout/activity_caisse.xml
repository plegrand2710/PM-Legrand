<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Sélection de la table par numéro -->
    <EditText
        android:id="@+id/etNumTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrez le numéro de la table"
        android:inputType="number" />

    <Button
        android:id="@+id/btnSelectTable"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sélectionner la table" />

    <!-- Liste des plats et boissons commandés -->
    <ListView
        android:id="@+id/lvCommande"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <!-- Affichage du total de la commande -->
    <TextView
        android:id="@+id/tvTotalCommande"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total : 0.00 €"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="18sp" />

    <!-- Bouton pour valider la note -->
    <Button
        android:id="@+id/btnValiderNote"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valider la note"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorAccent" />
</LinearLayout>
